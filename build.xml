<?xml version="1.0"?>
<project name="bb-ant-tools" default="build">
   <property name="src.dir" location="src" />
   <property name="etc.dir" location="etc" />
   <property name="output.dir" location="classes" />
   <property name="build.dir" location="build" />
   
   <property name="build.ver" value="0.1" />
   <property name="build.jar" value="bb-ant-tools-${build.ver}.jar" />

   <path id="build.classpath">
      <fileset dir="${ant.library.dir}" includes="*.jar" />
   </path>

   <target name="compile">
      <mkdir dir="${output.dir}" />
      <javac srcdir="${src.dir}" destdir="${output.dir}"
             classpathref="build.classpath" />
   </target>

   <target name="build" depends="compile">
      <mkdir dir="${build.dir}" />
      <jar destfile="${build.dir}/${build.jar}">
         <fileset dir="${output.dir}" />
         <fileset dir="${etc.dir}" />
      </jar>
   </target>

   <target name="clean">
      <delete dir="${output.dir}" />
   </target>
   
   <target name="distclean" depends="clean">
      <delete dir="${build.dir}" />
   </target>
</project>
